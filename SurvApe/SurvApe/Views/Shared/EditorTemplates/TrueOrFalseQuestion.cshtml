        <ol class="listTrue">

            @foreach (var item in Model)

            {
                @Html.Label(item.Text)
                <li class="listTrue">
                
                <b>True</b> @Html.RadioButton(item.Text, item.Answer)
                <b>False</b> @Html.RadioButton(item.Text, item.Answer)
                </li>
            }

</ol>















