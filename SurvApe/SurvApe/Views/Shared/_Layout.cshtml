<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SurvApe</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SurvApe", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <ul>
                <li class="dropdown floatleft">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Pollster <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Pollster Index", "Index", "Pollsters")</li>

                        <li>@Html.ActionLink("Create", "Create", "Pollsters")</li>
                    </ul>
            </li>
            <li class="dropdown floatleft">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Respondant <span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li>@Html.ActionLink("Respondant Index", "Index", "Respondants")</li>
                    <li>@Html.ActionLink("Create", "Create", "Respondants")</li>
                </ul>
            </li>
            <li class="dropdown floatleft">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Surveys <span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li>@Html.ActionLink("Survey Index", "Index", "Surveys")</li>

                    <li>@Html.ActionLink("Create", "Create", "Surveys")</li>
                </ul>
            </li>                                
            </ul>
        </div>
        @Html.Partial("_LoginPartial")
       
        </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - SurvApe</p>
        </footer>
    </div>
       @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
